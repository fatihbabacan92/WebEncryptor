
@{
    ViewData["Title"] = "_UploadHidor";
}

<h2>Hide text in images</h2>

<div>
    <form method="post" enctype="multipart/form-data" asp-controller="HidorController" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <h3>Upload an Image file</h3>
                <input type="file" name="files" multiple class="customButton" 
                       accept=".png,.jpg,.jpeg,.gif">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" class="customButton">
            </div>
        </div>
    </form>
    <form method="post">
        <br />
        <h3>Text</h3>
        <textarea class="hidorText"></textarea>
        <br />
        <input type="submit" value="Hide Text" class="customButton" asp-controller="Hidor" asp-action="HideText">
        <input type="submit" value="Extract Text"class="customButton" asp-controller="Hidor" asp-action="ExtractText">
    </form>
  
</div>

<div>
    <h3>Help</h3>
    <p>Press hide to hide a text in an image. A download link will be presented.</p>
    <p>Press extract to find hidden text in an image.</p>
</div>